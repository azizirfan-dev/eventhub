generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                   String    @id @default(cuid())
  email                String    @unique
  password             String
  name                 String
  role                 Role      @default(CUSTOMER)
  referralCode         String    @unique
  referredById         String?
  points               Int       @default(0)
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
  deletedAt            DateTime?
  resetPasswordExpires DateTime?
  resetPasswordOtp     String?

  events           Event[]           @relation("UserEvents")
  organizerProfile OrganizerProfile?
  pointHistories   PointHistory[]
  reviews          Review[]
  transactions     Transaction[]
  referredBy       User?             @relation("UserReferrals", fields: [referredById], references: [id])
  referrals        User[]            @relation("UserReferrals")

  promos Promo[] @relation("OrganizerPromos")
}

model OrganizerProfile {
  id        String    @id @default(cuid())
  userId    String    @unique
  bio       String?
  rating    Float     @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  events Event[] @relation("OrganizerProfileEvents")
  user   User    @relation(fields: [userId], references: [id])
}

model Event {
  id                 String    @id @default(cuid())
  organizerId        String
  organizerProfileId String?
  title              String
  description        String
  category           String
  location           String
  startDate          DateTime
  endDate            DateTime
  totalSeats         Int
  availableSeats     Int
  price              Int
  isPaid             Boolean   @default(true)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  deletedAt          DateTime?

  organizer        User              @relation("UserEvents", fields: [organizerId], references: [id])
  organizerProfile OrganizerProfile? @relation("OrganizerProfileEvents", fields: [organizerProfileId], references: [id])
  reviews          Review[]
  ticketTypes      TicketType[]
  transactionItems TransactionItem[]
  promos           Promo[]
}

model TicketType {
  id        String    @id @default(cuid())
  eventId   String
  name      String
  price     Int
  stock     Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  event            Event             @relation(fields: [eventId], references: [id])
  transactionItems TransactionItem[]
}

model Promo {
  id          String   @id @default(cuid())
  code        String   @unique
  description String?

  discount    Int
  isPercent   Boolean  @default(false)
  isGlobal    Boolean  @default(false)

  eventId     String?
  organizerId String?

  startDate   DateTime
  endDate     DateTime

  usageLimit  Int?
  usedCount   Int       @default(0)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  event        Event?     @relation(fields: [eventId], references: [id])
  organizer    User?      @relation("OrganizerPromos", fields: [organizerId], references: [id])
  transactions Transaction[]
}

model Transaction {
  id          String            @id @default(cuid())
  userId      String
  status      TransactionStatus @default(WAITING_PAYMENT)
  totalAmount Int
  usedPoints  Int               @default(0)
  usedPromoId String?
  expiresAt   DateTime?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  deletedAt   DateTime?

  paymentProof PaymentProof[]
  user         User              @relation(fields: [userId], references: [id])
  items        TransactionItem[]
  promo        Promo?            @relation(fields: [usedPromoId], references: [id])
}

model TransactionItem {
  id            String    @id @default(cuid())
  transactionId String
  eventId       String
  ticketTypeId  String?
  quantity      Int
  price         Int
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  event       Event       @relation(fields: [eventId], references: [id])
  ticketType  TicketType? @relation(fields: [ticketTypeId], references: [id])
  transaction Transaction @relation(fields: [transactionId], references: [id])
}

model PaymentProof {
  id            String    @id @default(cuid())
  transactionId String
  url           String
  uploadedAt    DateTime  @default(now())
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime?

  transaction Transaction @relation(fields: [transactionId], references: [id])

  @@index([transactionId])
}

model Review {
  id        String    @id @default(cuid())
  userId    String
  eventId   String
  rating    Int
  comment   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  event Event @relation(fields: [eventId], references: [id])
  user  User  @relation(fields: [userId], references: [id])

  @@index([eventId])
  @@index([userId])
}

model PointHistory {
  id        String    @id @default(cuid())
  userId    String
  amount    Int
  reason    String
  expiresAt DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([expiresAt])
}

model Log {
  id        String    @id @default(cuid())
  level     String
  message   String
  meta      Json?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum Role {
  CUSTOMER
  ORGANIZER
  ADMIN
}

enum TransactionStatus {
  WAITING_PAYMENT
  WAITING_ADMIN
  DONE
  REJECTED
  EXPIRED
  CANCELED
}
